/**index.wxss**/

.detail {
  width: 95%;
  margin: 20px auto;
}

.detail .row {
  line-height: 32px;
  border-radius: 4px;
  border: 1px solid #ddd;
  font-size: 12px;
  margin-bottom: 16px;
  padding: 4px;
}

.detail .row  text {
  display: inline-block;
  width: 28px;
  height: 28px;
  margin: 0 4px 0 0;
  line-height: 28px;
  text-align: center;
  border-radius: 50%;
  color: #fff;
  background: #e94b4b;
}

.detail .row  text:last-of-type {
  margin-right: 0;
}

.detail.type3 .row  text:last-of-type, .detail.type24 .row  text:last-of-type,
.detail.type26 .row  text:last-of-type {
  background: #3898d4;
}
